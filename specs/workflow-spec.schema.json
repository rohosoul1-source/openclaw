{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.ai/schemas/workflow-spec.schema.json",
  "title": "OpenClaw Workflow Spec",
  "type": "object",
  "required": ["id", "version", "task", "summary", "inputs", "nodes", "tests"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]{2,63}$"
    },
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "task": {
      "type": "integer",
      "minimum": 1,
      "maximum": 11
    },
    "summary": {
      "type": "string",
      "minLength": 10
    },
    "risk": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "object", "array"]
          },
          "required": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "kind", "description"],
        "properties": {
          "id": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "requiresApproval": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "tests": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "fixture", "assertions"],
        "properties": {
          "name": {
            "type": "string"
          },
          "fixture": {
            "type": "string"
          },
          "assertions": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
